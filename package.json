{
  "name": "@orangejellyfish/serverless-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "export NODE_ENV=dev && npm run deploy:env",
    "deploy:env": "sls deploy --stage $NODE_ENV",
    "deploy:production": "export NODE_ENV=production && npm run deploy:env",
    "lint": "eslint ./src",
    "start": "serverless offline start",
    "test": "jest --watch src"
  },
  "dependencies": {
    "aws-sdk": "^2.466.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "serverless": "^1.38.0",
    "serverless-iam-roles-per-function": "^1.0.4",
    "serverless-offline": "^3.31.3",
    "serverless-plugin-stage-variables": "^1.9.2",
    "serverless-webpack": "^5.2.0",
    "webpack": "^4.29.6",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true
  }
}
