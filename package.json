{
  "name": "@orangejellyfish/serverless-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "export NODE_ENV=dev && npm run deploy:env",
    "deploy:env": "sls deploy --stage $NODE_ENV",
    "deploy:production": "export NODE_ENV=production && npm run deploy:env",
    "lint": "eslint ./src",
    "start": "serverless offline start",
    "test": "jest --watch src"
  },
  "engines": {
    "node": "12.14.1"
  },
  "dependencies": {
    "aws-sdk": "2.536.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/preset-env": "^7.8.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^4.0.7",
    "jest": "^25.2.4",
    "lint-staged": "^9.5.0",
    "serverless": "^1.60.5",
    "serverless-iam-roles-per-function": "^2.0.2",
    "serverless-offline": "^5.12.1",
    "serverless-plugin-stage-variables": "^1.9.5",
    "serverless-webpack": "^5.3.1",
    "webpack": "^4.41.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true
  }
}
