{
  "name": "@orangejellyfish/serverless-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "export NODE_ENV=dev && npm run deploy:env",
    "deploy:env": "sls deploy --stage $NODE_ENV",
    "deploy:production": "export NODE_ENV=production && npm run deploy:env",
    "lint": "eslint ./src",
    "start": "serverless offline start",
    "test": "jest --watch src"
  },
  "dependencies": {
    "aws-sdk": "^2.493.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^3.0.4",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "serverless": "^1.47.0",
    "serverless-iam-roles-per-function": "^2.0.1",
    "serverless-offline": "^5.7.3",
    "serverless-plugin-stage-variables": "^1.9.2",
    "serverless-webpack": "^5.3.1",
    "webpack": "^4.36.0",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true
  }
}
